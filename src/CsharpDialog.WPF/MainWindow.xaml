<Window x:Class="CsharpDialog.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CsharpDialog.WPF"
        mc:Ignorable="d"
        Title="Dialog" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Icon and Title -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="DialogIcon" Width="32" Height="32" Margin="0,0,10,0" 
                       Source="{x:Null}" Visibility="Collapsed"/>
                <TextBlock x:Name="DialogTitle" Text="Dialog Title" 
                          FontSize="16" FontWeight="Bold" 
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- Message Text -->
                <TextBlock x:Name="MessageText" Text="Dialog message goes here." 
                          TextWrapping="Wrap" 
                          FontSize="12" 
                          Margin="0,0,0,20"/>
                
                <!-- Image Display -->
                <Image x:Name="ContentImage" 
                       MaxWidth="300" MaxHeight="200" 
                       Stretch="Uniform"
                       Visibility="Collapsed" 
                       Margin="0,0,0,20"/>
                
                <!-- Video Display (Placeholder) -->
                <Border x:Name="VideoContainer" 
                        Background="Black" 
                        Height="200" 
                        Visibility="Collapsed"
                        Margin="0,0,0,20">
                    <TextBlock Text="Video Player Placeholder" 
                              Foreground="White" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Button Area -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10">
            <StackPanel x:Name="ButtonPanel" Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <!-- Buttons will be dynamically added here -->
            </StackPanel>
        </Border>
    </Grid>
</Window>
