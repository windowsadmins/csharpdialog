<Window x:Class="csharpDialog.WPF.ProgressDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Device Setup" 
        Width="750" Height="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        MinWidth="500" MinHeight="400"
        Topmost="False"
        ShowInTaskbar="True">
    
    <!-- Main Content Grid -->
    <Grid x:Name="MainGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Message -->
            <RowDefinition Height="*"/>    <!-- Content List -->
            <RowDefinition Height="Auto"/> <!-- Progress -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>
        
        <!-- Header with Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,15" HorizontalAlignment="Left" Background="Transparent">
            <Image x:Name="CompanyLogo" Width="48" Height="48" Margin="0,0,16,0" Visibility="Visible">
                <Image.Source>
                    <DrawingImage>
                        <DrawingImage.Drawing>
                            <!-- Simple computer/setup icon -->
                            <DrawingGroup>
                                <GeometryDrawing Brush="#007ACC">
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="8,8,48,32" RadiusX="2" RadiusY="2"/>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                                <GeometryDrawing Brush="#005A9E">
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="12,12,40,20"/>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                                <GeometryDrawing Brush="#007ACC">
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="24,42,16,8" RadiusX="1" RadiusY="1"/>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingGroup>
                        </DrawingImage.Drawing>
                    </DrawingImage>
                </Image.Source>
            </Image>
            
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="TitleText" 
                          Text="Welcome to Device Setup"
                          FontSize="18" 
                          FontWeight="SemiBold"
                          Foreground="#333333"
                          Visibility="Visible"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Message Text -->
        <TextBlock x:Name="MessageText" Grid.Row="1"
                  Text="Your computer setup is underway. Feel free to step away, this could take 30 minutes or more.&#x0a;&#x0a;Your computer will restart when it's ready for use"
                  FontSize="13"
                  Foreground="#666666"
                  TextWrapping="Wrap"
                  Margin="20,0,20,20"
                  LineHeight="18"
                  Visibility="Visible"/>
        
        <!-- Application Installation List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="20,0,20,15">
            <StackPanel x:Name="ListItemsPanel">
                <!-- Items will be populated dynamically by WpfDialogService -->
            </StackPanel>
        </ScrollViewer>
        
        <!-- Progress Section -->
        <StackPanel Grid.Row="3" Margin="20,0,20,15">
            <TextBlock x:Name="ProgressText" Text="" FontSize="11" Foreground="#666" Margin="0,0,0,6" TextAlignment="Left"/>
            <ProgressBar x:Name="ProgressBarControl" 
                        Height="20" 
                        Value="25" 
                        Maximum="100"
                        Background="#e9ecef"
                        Foreground="#0078D4"/>
        </StackPanel>
        
        <!-- Footer Button -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
            <Button x:Name="OkButton"
                   Content="OK" 
                   FontSize="13"
                   Padding="32,8"
                   MinWidth="90"
                   Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>