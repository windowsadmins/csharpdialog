<Window x:Class="csharpDialog.WPF.FullscreenOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title=""
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        Left="0" Top="0">
    
    <!-- Root Grid - Windows backdrop blur will be applied via DWM API -->
    <Grid x:Name="OverlayGrid" Background="#91000000">
        <!-- Content Host - where the actual dialog will be placed -->
        <Border x:Name="DialogHost"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                MaxWidth="850"
                MaxHeight="1200">
            <!-- The actual ProgressDialogWindow content will be injected here -->
        </Border>
    </Grid>
</Window>
